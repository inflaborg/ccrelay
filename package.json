{
  "name": "ccrelay-vscode",
  "displayName": "CCRelay",
  "icon": "assets/icon-128.png",
  "description": "VSCode extension with built-in API proxy server - switch between AI providers seamlessly",
  "version": "0.1.3",
  "publisher": "inflab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inflaborg/ccrelay.git"
  },
  "bugs": {
    "url": "https://github.com/inflaborg/ccrelay/issues"
  },
  "homepage": "https://github.com/inflaborg/ccrelay#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "ccrelay.showMenu",
        "title": "CCRelay: Show Menu"
      },
      {
        "command": "ccrelay.switchProvider",
        "title": "CCRelay: Switch Provider"
      },
      {
        "command": "ccrelay.startServer",
        "title": "CCRelay: Start Server"
      },
      {
        "command": "ccrelay.stopServer",
        "title": "CCRelay: Stop Server"
      },
      {
        "command": "ccrelay.openSettings",
        "title": "CCRelay: Open Settings"
      },
      {
        "command": "ccrelay.showLogs",
        "title": "CCRelay: Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "ccrelay.clearLogs",
        "title": "CCRelay: Clear Logs"
      },
      {
        "command": "ccrelay.openWebUI",
        "title": "CCRelay: Open Dashboard",
        "icon": "$(dashboard)"
      }
    ],
    "configuration": {
      "title": "CCRelay",
      "properties": {
        "ccrelay.server.port": {
          "type": "number",
          "default": 7575,
          "description": "Port for the proxy server"
        },
        "ccrelay.server.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Host for the proxy server"
        },
        "ccrelay.server.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when VSCode starts"
        },
        "ccrelay.config.useFile": {
          "type": "boolean",
          "default": false,
          "description": "Read configuration from ~/.ccrelay/config.yaml"
        },
        "ccrelay.provider.default": {
          "type": "string",
          "default": "official",
          "description": "Default provider to use"
        },
        "ccrelay.provider.list": {
          "type": "object",
          "default": {
            "official": {
              "name": "Claude Official",
              "baseUrl": "https://api.anthropic.com",
              "mode": "passthrough"
            },
            "glm": {
              "name": "GLM-4.7",
              "baseUrl": "https://api.z.ai/api/anthropic",
              "mode": "inject",
              "authHeader": "authorization",
              "apiKey": "",
              "modelMap": {
                "claude-*": "glm-4.7"
              }
            }
          },
          "description": "Provider configurations. Each provider can have: name, baseUrl, mode, apiKey, authHeader, modelMap (model name mapping with wildcard support), headers. Example modelMap: { \"claude-*\": \"glm-4.7\" }",
          "scope": "window"
        },
        "ccrelay.route.patterns": {
          "type": "array",
          "default": [
            "/v1/messages",
            "/messages"
          ],
          "description": "Paths that route to current provider"
        },
        "ccrelay.route.passthroughPatterns": {
          "type": "array",
          "default": [
            "/v1/users/*",
            "/v1/organizations/*"
          ],
          "description": "Paths that always go to official API"
        },
        "ccrelay.route.blockPatterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "response": {
                "type": "string"
              },
              "responseCode": {
                "type": "number",
                "default": 200
              }
            },
            "required": [
              "path",
              "response"
            ]
          },
          "default": [
            {
              "path": "/api/event_logging/*",
              "response": "",
              "responseCode": 200
            }
          ],
          "description": "Paths that return custom response in inject mode"
        },
        "ccrelay.route.openaiBlockPatterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "response": {
                "type": "string"
              },
              "responseCode": {
                "type": "number",
                "default": 200
              }
            },
            "required": [
              "path",
              "response"
            ]
          },
          "default": [
            {
              "path": "/v1/messages/count_tokens",
              "response": "{\"input_tokens\": 0}",
              "responseCode": 200
            }
          ],
          "description": "OpenAI API paths that return custom response"
        },
        "ccrelay.concurrency.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable concurrency control for requests"
        },
        "ccrelay.concurrency.maxConcurrency": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of concurrent requests to provider",
          "minimum": 1
        },
        "ccrelay.concurrency.maxQueueSize": {
          "type": "number",
          "description": "Maximum number of queued requests (0 or undefined = unlimited, capped at 10000)",
          "minimum": 0
        },
        "ccrelay.concurrency.timeout": {
          "type": "number",
          "description": "Request timeout in milliseconds",
          "minimum": 0
        },
        "ccrelay.concurrency.routeQueues": {
          "type": "array",
          "default": [
            {
              "pathPattern": "/v1/messages/count_tokens",
              "maxConcurrency": 30,
              "name": "count_tokens"
            }
          ],
          "description": "Route-based queue configurations for handling specific paths with different concurrency",
          "items": {
            "type": "object",
            "properties": {
              "pathPattern": {
                "type": "string",
                "description": "Regex pattern to match request path (e.g., '/v1/messages/count_tokens')"
              },
              "maxConcurrency": {
                "type": "number",
                "default": 10,
                "description": "Maximum number of concurrent requests for this route",
                "minimum": 1
              },
              "maxQueueSize": {
                "type": "number",
                "description": "Maximum queue size for this route (0 or undefined = unlimited)",
                "minimum": 0
              },
              "timeout": {
                "type": "number",
                "description": "Request timeout in milliseconds for this route",
                "minimum": 0
              },
              "name": {
                "type": "string",
                "description": "Optional name for this queue (for logging)"
              }
            },
            "required": [
              "pathPattern"
            ]
          }
        },
        "ccrelay.log.enableStorage": {
          "type": "boolean",
          "default": false,
          "description": "Enable request/response logging to database"
        },
        "ccrelay.database.type": {
          "type": "string",
          "enum": [
            "sqlite",
            "postgres"
          ],
          "default": "sqlite",
          "description": "Database backend type"
        },
        "ccrelay.database.sqlitePath": {
          "type": "string",
          "default": "",
          "description": "Path to SQLite database file (default: ~/.ccrelay/logs.db)"
        },
        "ccrelay.database.postgresHost": {
          "type": "string",
          "default": "localhost",
          "description": "PostgreSQL server host"
        },
        "ccrelay.database.postgresPort": {
          "type": "number",
          "default": 5432,
          "description": "PostgreSQL server port"
        },
        "ccrelay.database.postgresDatabase": {
          "type": "string",
          "default": "ccrelay",
          "description": "PostgreSQL database name"
        },
        "ccrelay.database.postgresUser": {
          "type": "string",
          "default": "",
          "description": "PostgreSQL username"
        },
        "ccrelay.database.postgresPassword": {
          "type": "string",
          "default": "",
          "description": "PostgreSQL password (supports ${ENV_VAR} for environment variable substitution)"
        },
        "ccrelay.database.postgresSsl": {
          "type": "boolean",
          "default": false,
          "description": "Enable SSL for PostgreSQL connection"
        },
        "ccrelay.proxy.requestTimeout": {
          "type": "number",
          "default": 300,
          "description": "Proxy request timeout in seconds (0 = no timeout, default 5 minutes for long code generation)"
        },
        "ccrelay.ui.statusBarPosition": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "right",
          "description": "Position of the status bar item"
        },
        "ccrelay.ui.statusBarPriority": {
          "type": "number",
          "default": 100,
          "description": "Priority of the status bar item"
        }
      }
    }
  },
  "scripts": {
    "clean": "npx shx rm -rf out web/dist",
    "vscode:prepublish": "node scripts/build-config.mjs prod && npm run build:web && node scripts/generate-version.mjs && npm run bundle",
    "dev": "npm run watch",
    "dev:web": "cd web && npm run dev",
    "prebuild": "node scripts/generate-version.mjs",
    "build": "npm run clean && npm run build:web && npm run compile",
    "build:dev": "node scripts/build-config.mjs dev && npm run build",
    "build:prod": "node scripts/build-config.mjs prod && npm run build",
    "build:web": "npx shx rm -rf out/web && cd web && npm run build && npx shx mkdir -p ../out/web && npx shx cp -r dist/* ../out/web/",
    "precompile": "node scripts/generate-version.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "node scripts/esbuild.config.mjs",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check && eslint src tests --max-warnings=0",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src/**/*.ts *.json tests/**/*.ts scripts/*.mjs",
    "format:check": "prettier --check src/**/*.ts *.json tests/**/*.ts scripts/*.mjs",
    "test": "npm run test:unit",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "test:watch": "vitest tests/unit",
    "test:coverage": "vitest run tests/unit --coverage",
    "test:e2e": "node ./out/test/runTest.js",
    "package": "npm run build:web && node scripts/generate-version.mjs && npm run bundle && npx shx mkdir -p dists && vsce package --out dists",
    "package:dev": "./scripts/package.sh dev",
    "package:prod": "./scripts/package.sh prod",
    "package:beta": "node scripts/version-beta.mjs && npm run package",
    "package:release": "node scripts/version-release.mjs && npm run package",
    "prepare": "husky"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.19.11",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "get-port": "^7.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "typescript": "^5.0.4",
    "vitest": "^4.0.18"
  }
}
